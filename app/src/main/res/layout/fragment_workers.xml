<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".userRegistration.WorkersFragment">





    <androidx.cardview.widget.CardView
        android:id="@+id/registerUsersFragment"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="60dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="40dp"
        >

        <LinearLayout
            android:id="@+id/llCardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/user_register_user"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/ic_person_add"
                />
            <TextView
                android:id="@+id/user_register_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register User"
                android:fontFamily="@font/adamina"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="10dp"

                />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/viewUsersFragment"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintRight_toRightOf="parent"
        app:cardCornerRadius="10dp"
        app:cardElevation="40dp"
        >

        <LinearLayout
            android:id="@+id/llCardView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/users_edit_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_edit"
                />
            <TextView
                android:id="@+id/user_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Users"
                android:fontFamily="@font/adamina"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="10dp"

                />


        </LinearLayout>


    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>