<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".userRegistration.UserRegisterFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/theUserRegisterText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/amaranth"
            android:text="User Register"
            android:textColor="@color/teal_200"
            android:textSize="40dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@id/theUserRegisterText"
            android:layout_marginTop="50dp"
            android:layout_marginHorizontal="20dp"
            android:hint="First Name"
            android:fontFamily="@font/adamina"
            android:background="@drawable/costum_input"
            />

        <EditText
            android:id="@+id/userLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@id/userName"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:hint=" Last Name"
            android:fontFamily="@font/adamina"
            android:background="@drawable/costum_input"
            />

        <EditText
            android:id="@+id/userBirthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@id/userLastName"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:hint="User Birthday"
            android:fontFamily="@font/adamina"
            android:background="@drawable/costum_input"
            />

        <EditText
            android:id="@+id/userNumberID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@id/userBirthday"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:hint="User ID"
            android:fontFamily="@font/adamina"
            android:background="@drawable/costum_input"
            />

        <Button
            android:id="@+id/insertButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10sp"
            android:text="Register User"
            android:fontFamily="@font/adamina"
            android:textSize="20dp"
            android:textStyle="bold"
            android:backgroundTint="#539DA4"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/userNumberID" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>